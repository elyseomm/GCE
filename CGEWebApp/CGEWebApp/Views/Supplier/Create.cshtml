<script src="~/Content/App/appBase.js"></script>
<script src="~/Content/App/ProjectControl/add.js"></script>
@model FocusBrazilSFC.Core.ProjectConfig
@{
    ViewBag.Title = TempData["title"];
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@ViewBag.Title</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row" style="margin: 5px 0 2rem 0; display:flex">

        <div class="col">
            <div class="input-group">
                <span class="input-group-addon"
                      style="font-size: 9pt;
                                width: 85px;">
                    Project:
                </span>
                @Html.DropDownListFor(model => model.ID_PROJECT, (SelectList)ViewBag.Projects, new { @class = "form-control" })
            </div>

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="form-group col-sm-10">
                <label for="recipient-name" class="col-form-label">Parameter Name:</label>
                @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control input-modal-required", placeholder = "Parameter Name" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="form-group col-sm-10">
                <label for="recipient-name" class="col-form-label">Parameter Value:</label>
                @Html.EditorFor(model => model.VALUE, new { htmlAttributes = new { @class = "form-control input-modal-required", placeholder = "Parameter Value" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="form-group col-sm-10">
                <label for="recipient-name" class="col-form-label">Parameter Hash:</label>
                @Html.EditorFor(model => model.HASH, new { htmlAttributes = new { @class = "form-control", placeholder = "Parameter Hash" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="form-group col-sm-1">
                <label for="recipient-name" class="col-form-label">Active:</label>
                @Html.EditorFor(model => model.BACTIVE, new { htmlAttributes = new { @class = "form-control", placeholder = "Active" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Create" class="btn btn-default" id="btn-create" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>